{
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.fontFamily": "Maple Mono",
  "editor.fontLigatures": "'calt', 'zero', 'ss03'",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.75,
  "editor.suggestFontSize": 0,
  "editor.suggestLineHeight": 28,
  "editor.formatOnSave": true,
  "editor.lightbulb.enabled": "off",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.verticalScrollbarSize": 4,
  "editor.scrollbar.horizontalScrollbarSize": 4,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderLineHighlight": "all",
  "editor.renderControlCharacters": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  // Show vertical lines after a certain number monospace characters
  "editor.rulers": [
    80,
    100,
    120
  ],
  "editor.minimap.enabled": false,
  // Hide line number debug pointers
  "editor.glyphMargin": false,
  "editor.folding": true,
  "editor.lineNumbers": "on",
  "editor.guides.indentation": false,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  // Hide breadcrumbs below file tabs
  "breadcrumbs.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Maple Mono, Hack Nerd Font",
  "scm.diffDecorations": "none",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.fontSize": 14,
  // Extend terminal scroll buffer
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "CW_NEW_SESSION": "1"
  },
  // Disable telemetry
  "telemetry.telemetryLevel": "off",
  "workbench.colorCustomizations": {
    // Disable backgrounds for most of ui components
    "terminal.background": "#00000000",
    "terminalOverviewRuler.border": "#ffffff15",
    "editorGroupHeader.tabsBackground": "#00000000",
    "sideBar.background": "#00000000",
    "sideBarSectionHeader.background": "#00000000",
    "peekViewEditor.background": "#00000000",
    "peekViewEditorGutter.background": "#00000000",
    "peekViewTitle.background": "#00000000",
    "peekViewResult.background": "#00000000",
    "tab.activeBackground": "#00000000",
    "tab.inactiveBackground": "#00000000",
    "statusBar.debuggingBackground": "#00000000",
    "statusBar.noFolderBackground": "#00000000",
    "statusBarItem.activeBackground": "#00000000",
    "activityBar.background": "#00000000",
    // Custom theme configs
    "[PurpleSchool Theme]": {
      "terminalCursor.foreground": "#C45DFF",
      "editor.background": "#060410"
    }
  },
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  // Sidebar explorer location
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  // Terminal default location
  "workbench.panel.defaultLocation": "left",
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/src/**/index.ts": "${dirname}/${filename}"
  },
  // Hide ugly large buttons
  "workbench.activityBar.location": "hidden",
  // Hide tabs close button
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.colorTheme": "PurpleSchool Theme",
  "workbench.iconTheme": "symbols",
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": true,
  "zenMode.centerLayout": false,
  "window.zoomLevel": 1,
  "window.nativeFullScreen": true,
  "window.titleBarStyle": "native",
  "window.commandCenter": false,
  "prettier.printWidth": 120,
  "update.mode": "manual",
  "symbols.hidesExplorerArrows": true,
  "symbols.files.associations": {
    "*.service.ts": "brackets-blue",
    "*.service.js": "brackets-blue",
    "*.worker.ts": "brackets-red",
    "*.worker.js": "brackets-red"
  },
  "symbols.folders.associations": {
    "docs": "folder-green",
    "files": "folder",
    "methods": "folder-target",
    "utils": "folder-core",
    "models": "folder-mongo"
  },
  "custom-ui-style.reloadWithoutPrompting": true,
  "custom-ui-style.electron": {
    "frame": false,
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 15,
      "y": 14
    }
  },
  "custom-ui-style.font.sansSerif": "Maple Mono",
  "custom-ui-style.stylesheet": {
    /**
     * Styles configuration
     */
    "body .monaco-workbench": "--al-transparency-percent: 0%; --al-tab-height: 38px; --al-tab-y-offset: 7px; --al-command-palette-blur-amount: 4px; --al-tab-fontSize: 14px;"
  },
  "custom-ui-style.external.loadStrategy": "refetch",
  "custom-ui-style.external.imports": [
    "file://${userHome}/Documents/vscode-config/vscode-styles.css",
    "file://${userHome}/Documents/vscode-config/features/tabs.css",
    "file://${userHome}/Documents/vscode-config/features/terminal.css",
    "file://${userHome}/Documents/vscode-config/features/explorer.css",
    "file://${userHome}/Documents/vscode-config/features/command-palette.css",
    "file://${userHome}/Documents/vscode-config/features/hide-editor-buttons.css",
    "file://${userHome}/Documents/vscode-config/features/project-title-glow.css",
    "file://${userHome}/Documents/vscode-config/features/focus-glow.css"
  ]
}
